<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Fragments.HomeAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:background="@drawable/logo"/>

        <TextView
            android:id="@+id/bikeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CycleCare"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:textColor="@color/aquamarine"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

<!--        <ImageView-->
<!--            android:id="@+id/calendar"-->
<!--            android:layout_width="32dp"-->
<!--            android:layout_height="32dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:background="@drawable/calendar_icon"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:paddingStart="10dp"
                android:textSize="16sp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"/>


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="@color/royal_blue"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            app:civ_border_color="@color/pastel_green"
            app:civ_border_width="2dp"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/carddash"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/aquamarine">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/countpstxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="32dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/bikeNametxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Parking Space"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/bikeModeltxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="total number of Cycle Care unit"
                                android:textStyle="normal"
                                android:fontFamily="@font/poppins"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>



                    </LinearLayout>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/carddash1"
                android:layout_marginHorizontal="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/pastel_green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/countreporttxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="32dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/reporttxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reports"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/reportsdes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="total number of Reports"
                                android:textStyle="normal"
                                android:fontFamily="@font/poppins"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>



                    </LinearLayout>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:cardElevation="12dp"
                app:cardCornerRadius="12dp"
                android:id="@+id/carddash2"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_green">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/countusertxt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="32dp"
                                android:textColor="#ffff"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/userstxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Users"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins"
                                android:textSize="18dp"
                                android:textColor="@color/white"/>

                            <TextView
                                android:id="@+id/usersdes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="total number of users"
                                android:textStyle="normal"
                                android:fontFamily="@font/poppins"
                                android:textSize="12dp"
                                android:textColor="@color/white"/>

                        </LinearLayout>



                    </LinearLayout>



                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>