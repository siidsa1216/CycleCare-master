    <EditText
        android:id="@+id/bikeNametxt"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border_only"
        android:drawablePadding="15dp"
        android:hint="Bike Name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeBack" />

    <EditText
        android:id="@+id/bikeModeltxt"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border_only"
        android:drawablePadding="10dp"
        android:hint="Bike Model"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bikeNametxt" />

    <EditText
        android:id="@+id/bikeBrandtxt"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_border_only"
        android:drawablePadding="10dp"
        android:hint="Bike Brand"
