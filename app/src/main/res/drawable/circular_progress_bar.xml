<!-- res/drawable/circular_progress_bar.xml -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="12.0">
        <gradient
            android:centerColor="@color/pastel_green"
            android:endColor="@color/neon_green"
            android:startColor="@color/aquamarine"
            android:type="sweep" />
    </shape>
</rotate>
